<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="150sp"
        android:id="@id/listv"
        android:layout_height="wrap_content">

    </ListView>

    <RelativeLayout
        android:id="@+id/vegas" android:layout_toEndOf="@+id/listv"
        android:layout_width="wrap_content" android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/listv">

        <include
            android:id="@+id/bglayout"
            layout="@layout/fragment_vegas">

        </include>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/spancies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listv"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/listv">

        <include layout="@layout/fragment_spancies" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nicoz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listv"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/listv">

        <include layout="@layout/fragment_nichoz" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lakeV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listv"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/listv">

        <include layout="@layout/fragment_lake_view" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <!--<include layout="@layout/fragment_vegitables"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true" />-->

    </RelativeLayout>


</RelativeLayout>
